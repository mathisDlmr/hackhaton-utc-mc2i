// src/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              String  @id @default(cuid())
  pseudo          String  @unique
  email           String  @unique
  phone           String?
  age             Int?
  gender          String?
  description     String?
  city            String?
  postalCode      String?
  profilePhotoUrl String?
  offers          Offer[]
  createdAt       DateTime @default(now())
}

model Offer {
  id          String    @id @default(cuid())
  title       String
  description String
  type        OfferType
  tags        String
  price       Float?
  photoUrl String?
  city        String
  postalCode  String

  author   User   @relation(fields: [authorId], references: [id])
  authorId String

  createdAt DateTime @default(now())
}

enum OfferType {
  OBJET
  SERVICE
  CONNAISSANCE
}
