// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // L'URL de notre base de données SQLite. Le fichier sera créé à la racine.
  url      = "file:./dev.db"
}

// Modèle pour les utilisateurs
// On reste simple pour le hackathon
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  // Relation : un utilisateur peut créer plusieurs offres
  offers    Offer[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Modèle pour les offres (objets, services, etc.)
model Offer {
  id          String      @id @default(cuid())
  title       String
  description String
  // On utilise un Enum pour le type, c'est plus propre
  type        OfferType

  // Relation : chaque offre est créée par un utilisateur
  authorId    String
  author      User        @relation(fields: [authorId], references: [id])

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

// Enum pour les types d'offres
enum OfferType {
  OBJECT  // Prêt d'objet
  SERVICE // Offre de service
  KNOWLEDGE // Partage de connaissance
}
